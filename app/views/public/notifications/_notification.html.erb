<% visiter = notification.visiter %>

<div>
  <%= link_to end_user_path(visiter) do %>
   <%= image_tag visiter.get_profile_image, size:'100x100' %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%= "(#{time_ago_in_words(notification.created_at)} 前)"  %></span>
  <br>
  <% if !@post_comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @post_comment %></p>
  <% end %>
</div>

<div class="offset-5 pt-3"><%= paginate @notifications %></div>
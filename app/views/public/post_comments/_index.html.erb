<div class="container">
  <div class="row">
  <% post_comments.each do |post_comment| %>
    <div class="col-3">
      <%= image_tag post_comment.end_user.get_profile_image, size: "70x70" %>
    </div>
    <div class="col-9 pb-1">
      <%= post_comment.end_user.name %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %>
      <% if post_comment.end_user == current_end_user %>
        <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} do %>
          <i class="fas fa-trash-alt" style="color:#000;"></i>
        <% end %>
      <% end %><br>
      <%= post_comment.comment %>
    </div>
  <% end %>
  </div>
</div>

<div class="offset-4 mt-3"><%= paginate post_comments %></div>



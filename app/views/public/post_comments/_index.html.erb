<div class="container">
  <div class="row">
  <% post.post_comments.each do |post_comment| %>
    <div class="col-5">
      <%= image_tag post_comment.end_user.get_profile_image, size: "100x100" %>
    </div>
    <div class="col-5">
      <%= post_comment.end_user.name %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %>
      <% if post_comment.end_user == current_end_user %>
        <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, data: {confirm: "本当に削除しますか？"} do %>
          <i class="fas fa-trash-alt" style="color:#000;"></i>
        <% end %>
      <% end %>
      <%= post_comment.comment %><br>
    </div>
  <% end %>
  </div>
</div>

<div class="container">
  <h3 class="mb-3">新規登録</h3>

  <%= form_with model: @end_user, url: end_user_registration_path do |f| %>

  <div class="form-group row ml-5">
    <%= f.label :"名前", class: "col-sm-3 control-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name",:placeholder => "名前", class: "col-sm-4 form-control-static" %>
  </div>

  <div class="form-group row ml-5">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "メールアドレス", class: "col-sm-4 form-control-static" %>
  </div>

  <div class="form-group row ml-5">
    <%= f.label :"パスワード", class: "col-sm-3 control-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4 form-control-static" %>
  </div>

  <div class="actions col-8 text-center">
    <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
  </div>

  <% end %>

  <div class="row ml-5 mt-5">
    <h5>会員の方</h5>
  </div>

  <div class="row">
    <div class="col-4 offset-3">
     <%= link_to "こちら",  new_end_user_session_path %> からログインを行ってください。
    </div>
  </div>

</div>


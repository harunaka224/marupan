<div class="new-img">
    <h3 class="text-center mb-4"><strong>新規登録</strong></h3>

    <div class="d-flex justify-content-center">
    <%= form_with model: @end_user, url: end_user_registration_path do |f| %>
      <div class="form-group">
        <%= f.label :"ユーザー名" %>
        <div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name",:placeholder => "ユーザー名" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <div>
        <%= f.email_field :email, autocomplete: "email",:placeholder => "メールアドレス" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード" %>
        <div>
        <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
      <div class="actions text-center">
        <%= f.submit "登録", class: 'btn btn-primary rounded-pill' %>
      </div>
    <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      会員の方
      <%= link_to "こちら",  new_end_user_session_path %> からログインを行ってください。
    </div>

</div>



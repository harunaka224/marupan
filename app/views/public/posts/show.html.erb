<h3 class="text-center">投稿詳細</h3>

<div class="container">
  <div class="row">
    <div class="col-5">
      <div class="card-deck">
        <div class="card" style="width: 300px;">
          <img class="bd-placeholder-img card-img-top" role="img" aria-label="画像の説明">
            <%= image_tag @post.get_image, size: "445x300" %>
          </img>
          <div class="card-body">
            <p class="card-text">
              <%= @post.title %>
              <%= link_to edit_post_path(@post.id) do %>
              <i class="fas fa-edit" style="color:#000;"></i>
              <% end %>
            </p>
            <p class="card-text"><%= @post.body %></p>
            <p class="card-text"><%= @post.shop_name %></p>
            <p class="card-text"><%= @post.created_at.strftime('%Y/%m/%d') %></p>
            <p class="card-text"><%= @post.end_user.id %></p>
            <p class="likes-btn"><%= render 'public/likes/btn', post: @post %></p>
            <%= link_to post_path(@post.id), method: :delete, "data-confirm" => "投稿を削除しますか？" do %>
              <i class="fas fa-trash-alt" style="color:#000;"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-5">
    <%= form_with model: [@post, @post_comment] do |f| %>
      <%= f.text_area :comment, rows: '5', placeholder: "コメント入力", class: "w-100" %>
      <%= f.submit "送信" %>
    <% end %>
    <p>コメント件数：<%= @post.post_comments.count %></p>
      <% @post.post_comments.each do |post_comment| %>
        <p><%= image_tag post_comment.end_user.get_profile_image, size: "100x100" %></p>
        <p><%= post_comment.comment %></p>
        <%= post_comment.end_user.name %>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
        <% if post_comment.end_user == current_end_user %>
          <%= link_to post_post_comment_path(post_comment.post, post_comment), method: :delete, data: {confirm: "本当に削除しますか？"} do %>
            <i class="fas fa-trash-alt" style="color:#000;"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>








<div class="new-img">
  <div class="container">
    <h3 class="text-center pt-3 pr-4"><strong>新規投稿</strong></h3>

    <div class="row offset-4">
      <% if @post.errors.any? %>
      <h5 class="text-danger">必須入力です</h5>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>

    <div class="d-flex justify-content-center pt-3 offset-1">
    <%= form_with model: @post do |f| %>
      <div class="form-group">
        <%= f.label :"投稿画像" %>
        <div><%= f.file_field :image, accept: "image/*" %></div>
      </div>
      <div class="form-group">
        <%= f.label :"タイトル" %>
        <div><%= f.text_field :title, autofocus: true, placeholder:"タイトル" %></div>
      </div>
      <div class="form-group">
        <%= f.label :"説明" %>
        <div><%= f.text_area :body, autofocus: true, placeholder:"説明" %></div>
      </div>
      <div class="form-group">
        <%= f.label :"店名" %>
        <div><%= f.text_field :shop_name, autofocus: true, placeholder:"店名" %></div>
      </div>
      <div class="actions offset-2">
        <%= f.submit "投稿", class: 'btn btn-warning rounded-pill' %>
      </div>
    <% end %>
    </div>

  </div>
</div>

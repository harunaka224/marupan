<% posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <div class="card bg-light" style="width: 280px;">
      <img class="card-img-top" role="img" aria-label="画像の説明">
        <%= image_tag post.get_image, size: "280x280" %>
      </img>
      <div class="card-body">
        <p class="card-text text-dark"><%= post.title %></p>
        <p class="card-text text-dark"><%= post.created_at.strftime('%Y/%m/%d') %></p>
        <p class="text-dark">
          <i class="fas fa-heart" style="color: red;"></i><%= post.likes.count %>
          <%= render "public/post_comments/counter", post: post %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
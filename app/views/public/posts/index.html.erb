<div class="container">

  <div class="row">
      <div class="card-deck">
      <% @posts.each do |post| %>
        <div class="card" style="width: 18rem;">
          <svg class="bd-placeholder-img card-img-top" width="100%" height="10" role="img" aria-label="画像の説明">
            <%= image_tag post.get_image %>
          </svg>

          <div class="card-body">
            <% link_to post_path(post), class: "text-dark" do %>
            <p class="card-text"><%= post.title %></p>
            <p class="card-text"><%= post.body %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>





<div class="container">

  <div class="row">
    <div class="col-3 pr-3">
      <div class="card-deck">
      <% @posts.each do |posts| %>
      <div class="card" style="width: 18rem;">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="10" role="img" aria-label="画像の説明">
          <%= image_tag posts.get_image %>
        </svg>
        <div class="card-body">
          <p class="card-text"><%= posts.title %></p>
          <p class="card-text"><%= posts.body %></p>
        </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>

</div>





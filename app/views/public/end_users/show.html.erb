<div class="container">
  <h1 class="text-center font-weight-bolder">マイページ</h1>

  <div class="row">
    <div class="col-md-6 text-center">
      <%= image_tag @end_user.get_profile_image, size:'200x200' %><br>

      <div class='row'>
       <%= link_to "プロフィールを編集", edit_end_user_path(current_end_user), class: "btn btn-dark btn-sm" %>
      </div>

    </div>

    <div class="col-md-6">
      <h3><%= @end_user.name %></h3>
      <p><%= @end_user.email %></p>
      <p><%=link_to"お気に入り記事",likes_end_user_path(@end_user) %></P>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-md-6">
      <h5>投稿一覧</h5>
      <div class="card-deck"><%= render "public/posts/index", posts: @post %></div>
      <div class="pt-3"><%= paginate @post %></div>
    </div>
  </div>

</div>

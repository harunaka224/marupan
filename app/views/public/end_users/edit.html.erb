<div class="container">

  <h3 class="text-center">マイページ編集</h3>
  <div class="text-right mr-3">
  <%= link_to "退会する", end_users_quit_path, class: "btn btn-danger rounded-pill" %>
  </div>

  <div class="row justify-content-center">
  <%= form_with model: @end_user do |f| %>
    <label for="inputName">ユーザー名</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名"%><br>
    <label for="inputImage" class="pt-3">プロフィール画像</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
    <div class="pt-3 offset-4"><%= f.submit "変更を保存", class: "btn btn-warning rounded-pill" %></div>
  <% end %>
  </div>

</div>


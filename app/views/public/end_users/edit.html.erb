<div class="new-img">
  <div class="container">
    <h3 class="text-center"><strong>マイページ編集</strong></h3>
    <div class="text-right mr-3">
    <%= link_to "退会する", end_users_quit_path, class: "btn btn-danger rounded-pill" %>
    </div>

    <div class="row offset-4">
    <%= form_with model: @end_user do |f| %>
      <label class="col-4 col-form-label">ユーザー名</label>
      <%= f.text_field :name, autofocus: true, placeholder:"ユーザー名" %><br>
      <label class="col-6 col-form-label">プロフィール画像</label>
      <div class="offset-4"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br></div>
      <div class="pt-3 offset-4"><%= f.submit "変更を保存", class: "btn btn-warning rounded-pill" %></div>
    <% end %>
    </div>

  </div>
</div>


<h3 class="text-center alart alert-warning text-dark"><strong><%= @end_user.name %>さんの会員情報編集</strong></h3>

<div class="container">
  <div class="row">
  

  <%= form_with url: admin_end_user_path(@end_user), method: :patch, model: @end_user do |user| %>
    <div class= "form-group pl-2">
      <%= user.label :id, '会員ID', class: "col-2 control-label" %>
      <%= @end_user.id %>
    </div>
    <div class= "form-group pl-2">
      <%= user.label "名前", class: "col-2 control-label"%>
      <%= user.text_field :name, class: "mr-5" %>
    </div>
    <div class= "form-group pl-2">
      <%= user.label "メールアドレス", class: "col-2 control-label" %>
      <%= user.text_field :email, class: "mr-5" %>
    </div>

    <!--有効退会切り替え-->
    <div class= "form-group pl-2">
      <%= user.label "会員ステータス" , class: "col-2 control-label"%>
      <%= user.radio_button :is_deleted, :false %>
      <%= user.label :is_deleted, "有効", value: false %>
      <%= user.radio_button :is_deleted,  :true %>
      <%= user.label :is_deleted, "退会", value: true %>
    </div>
    <div class = "actions" >
      <%= user.label " " , class: "col-2 control-label" %>
      <%= user.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>

  </div>
</div>

<%= link_to "会員一覧を見る", admin_root_path, class: "btn btn-primary offset-2" %>
